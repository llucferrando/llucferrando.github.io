---
import Button from "../ui/button/Button.astro";
import DownloadButton from "../ui/button/DownloadButton.astro";
import ArrowSeparator from "../ui/separator/ArrowSeparator.astro";
import ToggleButton from "../ui/button/ToggleButton.astro"; 

interface Cta {
  text: string;
  href?: string;        // opcional (para enlaces normales)
  targetId?: string;    // opcional (para toggles)
  download?: boolean;
  variant?: 'primary' | 'secondary' | 'ghost' | 'outline';
  size?: 'sm' | 'md' | 'lg';
}

interface Props {
  title: string;
  subtitle?: string;
  showCTA?: boolean;
  primaryCTA?: Cta;
  secondaryCTA?: Cta;
}

const {
  title,
  subtitle,
  showCTA = false,
  primaryCTA,
  secondaryCTA,
} = Astro.props as Props;
---

<section class="w-full py-6 md:py-8">
  <div class="mx-auto max-w-5xl px-4 text-center">
    <h1 class="text-4xl md:text-6xl font-extrabold tracking-tight text-foreground">
      <span class="bg-gradient-to-r from-[var(--accent)] to-[var(--accent-dark)] bg-clip-text text-transparent">
        {title}
      </span>
    </h1>
    {subtitle && (
      <p class="mt-4 text-lg md:text-xl text-[color:var(--color-text-secondary)] max-w-2xl mx-auto">
        {subtitle}
      </p>
    )}
    {showCTA && (primaryCTA || secondaryCTA) && (
      <div class="mt-8 flex flex-col sm:flex-row items-center justify-center gap-3">
        {primaryCTA && (
          <>
            {primaryCTA.href && (
              <Button 
                href={primaryCTA.href} 
                variant={primaryCTA.variant || "primary"} 
                size={primaryCTA.size || "md"}
              >
                {primaryCTA.text}
              </Button>
            )}
            {primaryCTA.targetId && (
              <ToggleButton 
                targetId={primaryCTA.targetId} 
                variant={primaryCTA.variant || "primary"} 
                size={primaryCTA.size || "md"}
              >
                {primaryCTA.text}
              </ToggleButton>
            )}
          </>
        )}

        {secondaryCTA && (
          <>
            {secondaryCTA.href && (
              <Button 
                href={secondaryCTA.href} 
                variant={secondaryCTA.variant || "primary"} 
                size={secondaryCTA.size || "md"}
              >
                {secondaryCTA.text}
              </Button>
            )}
            {secondaryCTA.targetId && (
              <ToggleButton 
                targetId={secondaryCTA.targetId} 
                variant={secondaryCTA.variant || "primary"} 
                size={secondaryCTA.size || "md"}
              >
                {secondaryCTA.text}
              </ToggleButton>
            )}
          </>
        )}
      </div>
    )}
  </div>
</section>
