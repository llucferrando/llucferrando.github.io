---
import Button from "../ui/button/Button.astro";
import DownloadButton from "../ui/button/DownloadButton.astro";
import ArrowSeparator from "../ui/separator/ArrowSeparator.astro";
import ToggleButton from "../ui/button/ToggleButton.astro"; 
import SkillsSection from "./SkillsSection.astro";



interface Props {
  title?: string;
  subtitle?: string;
}

const {title, subtitle} = Astro.props as Props;
---

<section class="w-full py-6 md:py-10">
  <div class="mx-auto max-w-5xl px-4 text-center">
    <h4 class="text-2xl md:text-9xl font-extrabold tracking-tight text-foreground">
      <span class="bg-gradient-to-r from-[var(--accent)] to-[var(--accent-dark)] bg-clip-text text-transparent" />
        
      
      
    </h4>
    {subtitle && (
      <p class="mt-4 text-lg md:text-xl text-[color:var(--color-text-secondary)] max-w-2xl mx-auto">
        {subtitle}
      </p>
    )}
  </div>
</section>



