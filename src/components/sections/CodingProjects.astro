---
import Button from "../ui/button/Button.astro";
import DownloadButton from "../ui/button/DownloadButton.astro";
import ArrowSeparator from "../ui/separator/ArrowSeparator.astro";
import ToggleButton from "../ui/button/ToggleButton.astro"; 
import SkillsSection from "./SkillsSection.astro";
import PostCard from "../ui/card/PostCard.astro";
import { getCollection } from "astro:content";

const posts = await getCollection('blog');
const [firstPost,secondPost,thirdPost,fourthPost, fifthPost, sixthPost] = posts.slice(0,6);

interface Props {
  title?: string;
  subtitle?: string;
}

const {title, subtitle} = Astro.props as Props;
---

<section class="w-full py-5 md:py-5">
  <div class="mx-auto max-w-5xl px-4 text-center hidden">
    <h4 class="text-2xl md:text-9xl font-extrabold tracking-tight text-foreground">
      <span class="bg-gradient-to-r from-[var(--accent)] to-[var(--accent-dark)] bg-clip-text text-transparent ">
        TITLE
      </span> 
    </h4>
    
    <p class="mt-4 text-lg md:text-xl text-[color:var(--color-text-secondary)] max-w-2xl mx-auto">
        Here are the most important coding projects I made during my studies!
    </p>

    
    
  </div>
  <section class="w-full flex items-center justify-center">
  <div id="gameCards" class="grid grid-cols-1 md:grid-cols-3 gap-6">
    {firstPost && <PostCard post={firstPost}/>}
    {secondPost && <PostCard post={secondPost}/>}
    {thirdPost && <PostCard post={thirdPost}/>}
    {fourthPost && <PostCard post={fourthPost}/>}
    {fifthPost && <PostCard post={fifthPost}/>}
    {sixthPost && <PostCard post={sixthPost}/>}
    
  </div>
</section>

</section>



