---
import BaseHead from "../components/BaseHead.astro";
import Header from "../components/sections/Header.astro";
import HeroSection from "../components/sections/HeroSection.astro";
import ArrowSeparator from "@/components/ui/separator/ArrowSeparator.astro";
import CodingProjects from "@/components/sections/CodingProjects.astro";
import GameProjects from "@/components/sections/GameProjects.astro";
import Card from "@/components/ui/card/Card.astro";
import GlowLineSeparator from "@/components/ui/separator/GlowLineSeparator.astro";
import Footer from "@/components/sections/Footer.astro";
---

<html lang="en" data-theme="dark" class="dark">
  <head>
    <BaseHead title="Portfolio" description="Selected projects and playbooks" />
  </head>
  <body>
    <Header/>
    <main>
      <HeroSection 
        title="MY PROJECTS" 
        subtitle="I have developed some coding and game projects, click below to see them!"
        showCTA
        primaryCTA={{ text: 'CODING PROJECTS', targetId: 'coding-projects'}}
        secondaryCTA={{text: 'VIDEOGAME PROJECTS', targetId: 'videogame-projects'}}
        
        />
        <ArrowSeparator></ArrowSeparator>

      <div id="coding-projects" data-section class="hidden">
        <CodingProjects/>
      </div>

      <div id="videogame-projects" data-section class="hidden">
        <GameProjects/>
      </div>
    </main>
    <GlowLineSeparator></GlowLineSeparator>
    <Footer></Footer>
  </body>
</html>
